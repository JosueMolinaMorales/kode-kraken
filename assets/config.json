{
    "ignore": {                             // Ignore files and directories
        "ignore_files": [                   // Use regex to ignore files 
            "^.*Test\\.[^.]*$",             // Ignore files that end with Test.*
        ],
        "ignore_directories": [             // Use to ignore directories
            "dist",
            "build",
            "bin",
            ".gradle",
            ".idea",
            "gradle"
        ]
    },
    "threading": {                          // Config for threading
        "max_threads": 30,                  // Max number of threads to use when generating and collecting mutants
    },
    "output": {                             // Config for output
        "display_end_table": false          // Display the end table of mutants
    },
    "logging": {                            // Config for logging
        "log_level": "INFO"                 // Set the log level
    }
}
